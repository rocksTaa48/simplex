<%= params.inspect %>
<%= form_with model: @item do |f| %>
  <%= turbo_frame_tag :form, data: { turbo_permanent: true } do %>
  <div class="flex flex-col justify-center items-center border-slate-400 border-4 rounded-3xl w-4/6">
    <%= f.label :title %>
    <%= f.text_field :title, class:"rounded-xl border border-2 bg-red-50" %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description, class:"rounded-xl border border-2 bg-blue-100" %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price, class:"rounded-xl border border-2 bg-gray-100" %>
    <br>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class:"rounded-xl border border-2 bg-gray-100" %>
    <br>
  </div>
    <% end %>
  <% if @subcategory.present? %>
    <%= f.hidden_field "subcategory_id", value: @subcategory.id %>
  <% end %>
  <br>
  <%= f.submit "Submit",
               class:"rounded-xl bg-red-400 hover:bg-red-600 text-green-800 hover:text-white px-1 py-2",
               data: { turbo: false }
  %>
<% end %>