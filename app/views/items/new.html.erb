<%= form_tag new_item_path, method: :get, data: { controller: "select", action: "change->select#submit" } do %>
  <%= select_tag :category, options_for_select(@categories.map{|c| [c.title, c.id]}, @category&.id),
    { prompt: "- Category -", 
      class:"bg-gray-100 text-gray-700 border hover:bg-gray-500 hover:text-gray-100 rounded-md px-1 py-2 font-extralight" }
  %>
  <%= select_tag :subcategory, options_from_collection_for_select(@subcategories, "id", "title", @subcategory&.id),
    { prompt: "- Subcategory -", 
      class:"bg-gray-100 text-gray-700 border hover:bg-gray-500 hover:text-gray-100 rounded-md px-1 py-2 font-extralight" }
  %>
<% end %>
<%= render "form" %>
